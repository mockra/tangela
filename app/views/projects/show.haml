.row
  .project.span10.offset1
    .title
      %h1.project-title{ id: "#{@project.id}" }
        = link_to @project.name, projects_path, class: "#{@project.color}"
        .pull-right
          %a.btn.resource-btn New Resource
          = link_to project_resources_path(@project), class: 'btn' do
            %i.icon-pencil
    .lists
      = render 'resources/resources'

      .new_note_form
        %i.icon-plus-sign
        = form_for [ @project, Note.new ], remote: true do |f|
          = f.text_field :content

      = render 'notes/notes'

= render 'resources/resource_modal'
