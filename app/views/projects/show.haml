.row
  .project.span10.offset1
    .title
      %h1
        = @project.name
        .pull-right
          %a.btn.resource-btn
            New Resource
          = link_to project_resources_path(@project), class: 'btn' do
            %i.icon-pencil
    .lists

      %ul.resources
        - @resources.each do |resource|
          %li
            = display resource

      %ul.notes
        - @project.notes.each do |note|
          %li
            = note.content
            .pull-right
              = link_to project_note_path( @project, note ), method: :delete do
                %span.close &times;

= render 'resource_modal'
