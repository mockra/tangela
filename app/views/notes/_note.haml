= content_tag_for :tr, note do

  %td.note-handle
    %i.icon-minus.handle

  %td.note-content
    = best_in_place note, :content, path: project_note_path( project, note.id )

  %td.note-links
    = link_to project_note_path( project, note ), method: :delete, remote: true do
      %span.close &times;
