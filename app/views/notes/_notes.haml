%span.notes
  %table.notes.sortable{ url: "#{sort_notes_url}" }
    %tbody
      - @notes.each do |note|
        = render 'notes/note', note: note, project: @project
  %br
  - if @project.notes.completed.count > 0
    %button.btn.plus
      %i.icon-plus
      %small= "(#{@project.notes.completed.count})"
