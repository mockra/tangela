.user-form
  = form_for @user do |f|
    %fieldset
      %legend Register
      .control-group
        = f.label :email, 'Email', class: 'control-label'
        .controls
          = f.text_field :email
      .control-group
        = f.label :name, 'Name', class: 'control-label'
        .controls
          = f.text_field :name
      .control-group
        = f.label :password, 'Password', class: 'control-label'
        .controls
          = f.password_field :password
      .control-group
        = f.label :password_confirmation, 'Password', class: 'control-label'
        .controls
          = f.password_field :password_confirmation
      .form-actions
        = f.submit 'Register', class: 'btn'
